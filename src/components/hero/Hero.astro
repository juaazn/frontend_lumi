---
import HeroSlider from "./HeroSlider.svelte";
import type { HeroSlides } from "../../types/domain/heroSlider.types";
import { getHeroSlides } from "../../lib/features/heroSlider/heroSlider.service";

const { imagenFondoHomePage, alternativeText } = Astro.props;

const slides: HeroSlides = await getHeroSlides();
---
<HeroSlider
  client:load
  slides={slides}
  fallbackImage={imagenFondoHomePage}
  fallbackAlt={alternativeText}
/>
