---
import Header from "../components/header/Header.astro"
import { getHome } from "../lib/features/home/home.service";
import Hero from "../components/hero/Hero.astro";
import "../styles/global.css";

const home = await getHome();
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{home.title}</title>
	</head>
	<body>
		<Header home={home} />
		<Hero imagenFondoHomePage={home.imagenFondoHomePage} alternativeText={home.alternativeText} />
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--font-primary: 'Libre Caslon Condensed';
		--font-title: 'Instrument Sans';
		--font-decorative: 'SourGummy';
		--font-semibold: 600;
		--font-medium: 500;
		--font-regular: 400;
		--font-bold: 800;
		--txt-size-small: 1em;
		--txt-size-medium: 2rem;
		--txt-size-title: 1.8rem;

		--color-ivory: #F8F4E3;
		--color-white: #FDFDFF;
		--color-black: #020202;
		--color-green: #28965A;
		--color-background: #F8F4E3;
	}

	@font-face {
    font-family: 'Instrument Sans';
    src: url('/fonts/InstrumentSans-VariableFont_wdth,wght.woff2') format('woff2');
    font-weight: 200 900;
    font-style: normal;
    font-display: swap;
  }


	@font-face {
		font-family: 'Libre Caslon Condensed';
		src: url('/fonts/LibreCaslonCondensed.woff2') format('woff2');
		font-weight: 200 900;
		font-style: normal;
		font-display: swap;
	}

	@font-face {
		font-family: "Hammersmith One";
		src: url("/fonts/HammersmithOne-Regular.woff2") format("woff2");
		font-style: bold;
		font-display: swap;
	}

	@font-face {
		font-family: 'SourGummy';
		src: url('./fonts/SourGummy-Italic-VariableFont_wdth,wght.ttf') format('truetype');
		font-weight: 100 900; /* variable */
		font-stretch: 75% 125%; /* wdth si est√° soportado */
		font-style: italic;
		font-display: swap;
	}

	@media (max-width: 768px) {
		html,
		body {
			font-family: var(--font-primary), serif;
			min-height: 100vh;
			overflow-x: hidden;
			margin: 0;
		}

		body {
			font-size: 16px;
			background-color: var(--color-background);
		}
	}

	ul {
		list-style: none;
		padding: 0;
		margin: 0;
	}

	a {
		text-decoration: none;
		color: inherit;
	}

	button {
		all: unset;
	}
</style>
